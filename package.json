{
  "name": "field-comment",
  "displayName": "field-comment",
  "description": "展示字段注释",
  "version": "0.0.1",
  "publisher": "swlws",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fieldComment.enable",
        "title": "Field Comment Enabled"
      },
      {
        "command": "fieldComment.disable",
        "title": "Field Comment Disabled"
      },
      {
        "command": "fieldComment.toggle",
        "title": "Field Comment Toggle"
      },
      {
        "command": "catCoding.start",
        "title": "Cat Coding Start"
      }
    ],
    "configuration": {
      "title": "Field Comment",
      "properties": {
        "fieldComment.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用 Value Comment 插件"
        },
        "fieldComment.defaultComment": {
          "type": "string",
          "default": "// 默认注释",
          "description": "在每一行前面显示的默认注释"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
